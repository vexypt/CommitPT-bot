{
  "name": "commitbot",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "test": "tsc --noEmit && echo âœ” Ok",
    "build": "tsup",
    "dev": "tsx --env-file .env ./src/index.ts",
    "canary": "tsx --env-file .env.dev ./src/index.ts",
    "watch": "tsx --watch --env-file .env ./src/index.ts",
    "watch:canary": "tsx --watch --env-file .env.dev ./src/index.ts",
    "start": "node --env-file .env .",
    "start:canary": "node --env-file .env.dev .",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@fastify/cors": "10.0.1",
    "@magicyan/discord": "1.5.4",
    "@reliverse/reglob": "1.0.0",
    "chalk": "5.6.2",
    "discord.js": "^14.24.0",
    "fastify": "^5.6.1",
    "http-status-codes": "2.3.0",
    "mongoose": "^8.19.3",
    "rou3": "0.7.3",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "22.16.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsup": "^8.3.5",
    "tsx": "4.19.3",
    "typescript": "5.9.3"
  },
  "imports": {
    "#env": [
      "./build/env.js"
    ],
    "#base": [
      "./build/discord/base/index.js"
    ],
    "#functions": [
      "./build/functions/index.js"
    ],
    "#database": [
      "./build/database/index.js"
    ],
    "#server": [
      "./build/server/index.js"
    ],
    "#menus": [
      "./build/menus/index.js"
    ],
    "#tools": [
      "./build/tools/index.js"
    ],
    "#lib/*": [
      "./build/lib/*"
    ],
    "#shared/*": [
      "./build/shared/*"
    ]
  }
}
